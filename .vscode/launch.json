{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/src/snapshot.js",
            "args": ["-s", "source.dhall", "-g", "testcase/dhall.tmLanguage.json", "-t", "test/resources/snaps/*.dhall"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }, {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "smartStep": false,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
              "-r",
              "ts-node/register",
              "-r",
              "source-map-support/register",
              "test/**/*.test.ts",
              "--timeout",
              "500000"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
          }
    ]
}